@model Resanehlab.Plugin.Products.ProductComments.Models.ProductCommentModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<script>
    $(document).ready(function () {
        bindBootstrapTabSelectEvent('comment-edit');
    });
</script>

<div class="content">
    <div class="form-horizontal">
        <nop-tabs id="comment-edit">
            <nop-tab asp-name="tab-info" asp-title="@T("Admin.Plugin.ProductComments.Info")" asp-default="true">
                <div class="panel-group">
                    <div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.ProductName" />
                                </div>
                                <div class="col-md-9">
                                    <a href="@Url.RouteUrl("Product", new {SeName = Model.ProductSeName})" target="_blank">
                                        <div class="form-text-row">@Model.ProductName</div>
                                        <span asp-validation-for="@Model.ProductName"></span>
                                    </a>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.CommentText" />
                                </div>
                                <div class="col-md-9">
                                    <div class="form-text-row">@Model.CommentText</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.ReplyText" />
                                </div>
                                <div class="col-md-9">
                                    <nop-textarea asp-for="@Model.ReplyText" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.IsApproved" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="@Model.IsApproved" />
                                    <span asp-validation-for="@Model.IsApproved"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nop-tab>
        </nop-tabs>
    </div>
</div>